.card
	display block
	overflow hidden
	min-width 300px
	background-color rgba(255, 255, 255, .85)
	border-radius 4px

.card__wrap
	padding-x(20px)
	padding-top 32px

.card__img-wrap
	margin-x auto
	margin-top 40px
	margin-bottom 18px
	overflow hidden
	width 140px
	height 140px
	border-radius 50%
.card__img
	width 100%
	filter grayscale(.8)
.card__title
	margin-bottom 4px
	font-size 21px
	font-weight 600
	line-height 28px
	text-align center
	color #455a64
.card__text
	font-size 14px
	line-height 24px
	text-align center
	color #455a64
