mixin checkbox(args)
	+b.checkbox(id=attributes.id ? attributes.id : null, class=attributes.class ? attributes.class : null)
		input(
		type='checkbox'
		name=args.name
		id=args.id
		value=args.value ? args.value : 'true'
		checked=args.checked
		disabled=args.disabled)
		label(
		for=args.id
		)
			!= args.checkboxlabel
