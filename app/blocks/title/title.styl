.title
	display block
	font-family bernier
	font-size 30px
	line-height 36px
	text-align center
	text-transform uppercase
	color #455a64
	&_login
		position relative
		margin-top 36px
		+laptop()
			font-size 35px
		&:before,
		&:after
			position absolute
			top 16px
			width 22px
			height 5px
			content ''
			background-color #d1d2d2
		&:before
			left 26px
			+tablet()
				left 40px
		&:after
			right 26px
			+tablet()
				right 40px
	&_dark
		font-size 35px
		line-height 42px
		color #373e42
	&_about-info
		padding-y(22px)
		+tablet()
			font-size 49px
			line-height 52px
		+laptop()
			font-size 63px
			line-height 66px
	&_contacts
		font-size 35px
		line-height 42px

